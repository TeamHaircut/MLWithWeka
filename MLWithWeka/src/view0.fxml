<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" prefHeight="350.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TextClassifierController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Label text="Prediction Model" />
            <ComboBox prefWidth="300.0" />
            <Button mnemonicParsing="false" text="Predict" />
         </children>
      </HBox>
      <VBox alignment="CENTER" maxHeight="1200.0" maxWidth="1200.0" minHeight="200.0" minWidth="568.0" spacing="5.0" style="-fx-border-color: black;">
         <children>
            <Label text="Input Text Below" />
            <TextArea maxHeight="1200.0" maxWidth="1200.0" minHeight="200.0" minWidth="568.0" />
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <TextField promptText="choose a file" />
                  <Button mnemonicParsing="false" text=". . ." />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
         <children>
            <Label text="Classification" />
            <TextField prefWidth="300.0" />
            <Button mnemonicParsing="false" text="Reset" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="5.0" right="5.0" />
   </padding>
</VBox>
